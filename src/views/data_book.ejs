<div class="full-width-container <%= book.background; %>">
    <div class="content-container mt3">
        <div class="center mt5">
            <h1 class="white mb1"><%= book.title; %></h1>
            <img src="./img/svg/<%= book.image; %>" alt="couverture du manuel"
                 class="book-cover img-fade <%= book.border; %> >">
        </div>
        <form class="center mt3">
            <input class="radio-button" type="radio" name="format" value="PDF"
                   id="PDF" checked>
            <label class="radio-label" for="PDF">Format PDF</label>
            <input class="radio-button" type="radio" name="format"
                   value="Papier" id="Papier">
            <label class="radio-label" for="Papier">Format Papier</label>
            <div id="format-specs">
                <div>Titre</div>
                <div><%= book.title; %></div>
                <div>Date de publication</div>
                <div>
                    <%
                    let pub_date = new Date(book_format.pub_date);
                    let month_names = [
                        'Janvier', 'Février', 'Mars', 'Avril', 'Mai',
                        'Juin', 'Juillet', 'Août', 'Septembre', 'Octobre',
                        'Novembre', 'Décembre'
                    ];
                    %>
                    <%= `${ pub_date.getDate() } ${ month_names[pub_date.getMonth()] } ${ pub_date.getFullYear() }`; %></div>
                <div>Format</div>
                <div>PDF <%= book_format.name; %></div>
                <div>Taille</div>
                <div><%= book_format.size; %></div>
                <div>Nombre de pages</div>
                <div><%= book_format.pages; %></div>
                <div>Langue</div>
                <div><%= book_format.language; %></div>
                <div>Disponible</div>
                <div><%= book_format.market; %></div>
                <div>Prix</div>
                <div><%= book_format.price; %> $ CAD</div>
            </div>
            <div class="center mt3">
                <button class="orange-button">Ajouter au panier</button>
            </div>
        </form>
        <h2 class="mt3 mb1">À propos</h2>
        <div class="long-text">
            <% book.description.split('\\n').forEach((paragraph) => { %>
                <p><%= paragraph; %></p><br><br>
            <% }); %>
        </div>
        <% if (book.workbook_desc) { %>
            <h2 class="mt3 mb1">Manuels par niveaux</h2>
            <div>
                <% book.workbook_desc.split('\\n').forEach((paragraph) => { %>
                    <p><%= paragraph; %></p><br><br>
                <% }); %>
            </div>
        <% } %>
    </div>
</div>
