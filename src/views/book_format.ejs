<div id="format-tabs">
    <button
    <% if (book_format.type.toLowerCase() === 'pdf') { %> class="blue selected cursor"
    <% }
    else { %> class="blue" hx-get="/<%= book_format.title.toLowerCase() %>/format/pdf"%>
            <% } %>
    >Format PDF
    </button>
    <button
    <% if (book_format.type.toLowerCase() === 'papier') { %> class="blue selected cursor"
    <% }
    else { %> class="blue" hx-get="/<%= book_format.title.toLowerCase() %>/format/papier"%>
            <% } %>
    >Format Papier
    </button>
</div>
<div id="format-specs" class="p2">
    <div class="semi-bold">Titre</div>
    <div><%= book_format.title; %></div>
    <div class="semi-bold">Date&nbsp;de&nbsp;publication</div>
    <div>
        <%
        let date = new Date(book_format.date);
        let month_names = [
            'janv', 'févr', 'mars', 'avr', 'mai',
            'juin', 'juil', 'août', 'sept', 'oct',
            'nov', 'déc'
        ];
        %>
        <%= `${ date.getDate() } ${ month_names[date.getMonth()] } ${ date.getFullYear() }`; %></div>
    <div class="semi-bold">Format</div>
    <div>
        <% if (book_format.type === 'pdf') { %>
            <%= book_format.type; %> téléchargeable
        <% } else { %> <%= book_format.type; %>
        <% } %>
    </div>
    <div class="semi-bold">Taille</div>
    <div><%= book_format.size; %></div>
    <div class="semi-bold">Nombre&nbsp;de&nbsp;pages</div>
    <div><%= book_format.pages; %></div>
    <div class="semi-bold">Langue</div>
    <div><%= book_format.language; %></div>
    <div class="semi-bold">Disponible</div>
    <div><%= book_format.market; %></div>
    <div class="semi-bold">Prix</div>
    <div class="bold"><%= book_format.price; %> $ CAD</div>
    <div class="center mt1 double-column">
        <button class="orange-button">Ajouter au panier</button>
    </div>
</div>
